{
  "project_info": {
    "name": "Options Price Prediction Model",
    "version": "1.0.0",
    "description": "ML system for predicting option prices with 12%+ performance boost over Black-Scholes"
  },
  
  "data_collection": {
    "symbols": ["AAPL", "GOOGL", "MSFT", "TSLA", "SPY"],
    "historical_period": "2y",
    "max_expirations": 6,
    "min_volume": 1,
    "min_open_interest": 1,
    "moneyness_range": [0.8, 1.2],
    "max_time_to_expiry": 365,
    "cache_duration_minutes": 60
  },
  
  "feature_engineering": {
    "volatility_windows": [5, 10, 20, 30, 60, 90],
    "ma_periods": [5, 10, 20, 50, 100, 200],
    "technical_indicators": {
      "rsi_period": 14,
      "macd_fast": 12,
      "macd_slow": 26,
      "macd_signal": 9,
      "bollinger_period": 20,
      "bollinger_std": 2,
      "atr_period": 14
    },
    "feature_selection_k": 50,
    "scaling_method": "standard",
    "handle_missing": "median",
    "create_interactions": true
  },
  
  "model_training": {
    "test_size": 0.2,
    "validation_size": 0.2,
    "cv_folds": 5,
    "random_state": 42,
    "models_to_train": ["random_forest", "xgboost", "lightgbm", "neural_network"],
    "neural_network": {
      "architecture": "deep",
      "epochs": 100,
      "batch_size": 64,
      "early_stopping_patience": 15,
      "reduce_lr_patience": 10
    },
    "ensemble_method": "weighted",
    "model_selection_metric": "mse"
  },
  
  "black_scholes": {
    "risk_free_rate": 0.05,
    "dividend_yield": 0.0,
    "monte_carlo_simulations": 100000,
    "monte_carlo_steps": 252,
    "implied_vol_tolerance": 1e-6,
    "implied_vol_max_iterations": 100
  },
  
  "trading_strategy": {
    "min_confidence": 0.6,
    "max_position_size": 0.05,
    "stop_loss": -0.5,
    "take_profit": 1.0,
    "max_time_to_expiry": 60,
    "commission": 1.0,
    "signal_thresholds": {
      "weak": 0.02,
      "moderate": 0.05,
      "strong": 0.10
    }
  },
  
  "backtesting": {
    "initial_capital": 100000,
    "start_date": "2023-01-01",
    "end_date": "2024-12-31",
    "transaction_costs": true,
    "slippage": 0.001,
    "benchmark": "SPY",
    "risk_free_rate": 0.02,
    "performance_metrics": [
      "total_return",
      "sharpe_ratio",
      "max_drawdown",
      "win_rate",
      "sortino_ratio"
    ]
  },
  
  "realtime": {
    "update_interval_seconds": 300,
    "cache_duration_seconds": 60,
    "max_concurrent_symbols": 10,
    "prediction_confidence_threshold": 0.6,
    "alert_thresholds": {
      "high_confidence": 0.8,
      "large_move": 0.1,
      "portfolio_risk": 0.15
    },
    "data_sources": {
      "primary": "yfinance",
      "backup": null
    }
  },
  
  "risk_management": {
    "max_portfolio_delta": 1000,
    "max_portfolio_gamma": 500,
    "max_portfolio_vega": 2000,
    "theta_decay_limit": -500,
    "correlation_limit": 0.8,
    "var_confidence": 0.05,
    "stress_test_scenarios": {
      "price_shocks": [-0.2, -0.1, -0.05, 0.05, 0.1, 0.2],
      "vol_shocks": [-0.5, -0.25, 0.25, 0.5]
    }
  },
  
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file_path": "../logs/options_prediction.log",
    "max_file_size_mb": 100,
    "backup_count": 5,
    "console_output": true
  },
  
  "performance_targets": {
    "mse_improvement_target": 12.0,
    "min_directional_accuracy": 0.55,
    "min_sharpe_ratio": 1.0,
    "max_drawdown_limit": 0.15,
    "min_win_rate": 0.5
  },
  
  "data_paths": {
    "raw_data": "../data/raw/",
    "processed_data": "../data/processed/",
    "models": "../models/",
    "predictions": "../data/predictions/",
    "reports": "../docs/",
    "logs": "../logs/"
  },
  
  "api_settings": {
    "yfinance": {
      "timeout": 30,
      "retry_attempts": 3,
      "retry_delay": 1
    },
    "rate_limits": {
      "requests_per_minute": 100,
      "requests_per_hour": 1000
    }
  }
}
